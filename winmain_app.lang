Main
{
	winmain(reftype instance, reftype prev_instance, cstr[] argv, int cmd_show) static ->int
	{
		int idx;
		idx = 0;
		while (idx < argv.size())
		{
			show_msg(argv[idx]);
			idx = idx + 1;
		}
		return 0;
	}
	show_msg(cstr msg) static ->none
	{
		int MB_ICONINFORMATION;
		MB_ICONINFORMATION= 0x40;
		cstr Caption;
		Caption = "The Caption";
		_asm
		{
			push	%MB_ICONINFORMATION
			push 	%Caption
			 push	%msg
			 push	0
			 call	_MessageBoxA@16
		}
	}
}